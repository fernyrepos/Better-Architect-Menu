<?xml version="1.0" encoding="utf-8" ?>
<Patch>


    <!-- SEATING -->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>
            Defs/ThingDef[defName="RS_Sofachair"]/designationCategory |
            Defs/ThingDef[defName="RS_Stool"]/designationCategory
            </xpath>
        <value>
            <designationCategory>Ferny_Seating</designationCategory>
        </value>
    </Operation>


    <!-- LIGHTING -->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>Defs/ThingDef[defName="RSWallLamp"]/designationCategory</xpath>
        <value>
            <designationCategory>Ferny_Lighting</designationCategory>
        </value>
    </Operation>


    <!-- ========== KITCHEN ========== -->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>
            Defs/ThingDef[defName="RS_SpiceJar"]/designationCategory |
            Defs/ThingDef[defName="RS_KitchenUtensilsHolder"]/designationCategory |
            Defs/ThingDef[defName="RS_plate"]/designationCategory |
            Defs/ThingDef[defName="RS_sink"]/designationCategory |
            Defs/ThingDef[defName="RS_KitchenHood"]/designationCategory |
            Defs/ThingDef[defName="RS_TopShelf"]/designationCategory |
            Defs/ThingDef[defName="RS_Counter"]/designationCategory |
            Defs/ThingDef[defName="RS_Blender"]/designationCategory |
            Defs/ThingDef[defName="RS_Pot"]/designationCategory |
            Defs/ThingDef[defName="RS_Microwave"]/designationCategory |
            Defs/ThingDef[defName="RS_Doma"]/designationCategory |
            Defs/ThingDef[defName="RS_stove"]/designationCategory | 
            Defs/ThingDef[defName="RS_fridge"]/designationCategory
        </xpath>
        <value>
            <designationCategory>Ferny_Kitchen</designationCategory>
        </value>
    </Operation>

        <!-- ========== FOOD STORAGE ========== -->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>
            Defs/ThingDef[defName="RS_CounterB"]/designationCategory 
        </xpath>
        <value>
            <designationCategory>Ferny_FoodStorage</designationCategory>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>Defs/ThingDef[@ParentName="RS_FoodStorage"]/designationCategory</xpath>
        <value>
        <designationCategory>Ferny_FoodStorage</designationCategory>
        </value>
    </Operation>

    <!-- ========== TABLES (Table Cloths) ========== -->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>
            Defs/ThingDef[defName="RS_smallTableClothe"]/designationCategory |
            Defs/ThingDef[defName="RS_smallTableClotheB"]/designationCategory |
            Defs/ThingDef[defName="RS_smallTable"]/designationCategory
        </xpath>
        <value>
            <designationCategory>Ferny_Tables</designationCategory>
        </value>
    </Operation>

    <!-- ========== PLANTS (Decorations) ========== -->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>Defs/ThingDef[defName="RS_tableflower"]/designationCategory</xpath>
        <value>
            <designationCategory>Ferny_DecoPlants</designationCategory>
        </value>
    </Operation>

    <!-- Remove the original BS category -->
    <Operation Class="PatchOperationRemove">
        <success>Always</success>
		<xpath>Defs/DesignationCategoryDef[defName="RS_Category"]</xpath>
	</Operation>

</Patch>