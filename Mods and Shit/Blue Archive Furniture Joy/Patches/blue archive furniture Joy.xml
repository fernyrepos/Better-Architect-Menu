<?xml version="1.0" encoding="utf-8"?>
<Patch>

	
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="Simple_Pink_Stool"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_Seating</designationCategory>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>
            Defs/ThingDef[defName="Air_Hockey_Game_Machine"]/designationCategory |
            Defs/ThingDef[defName="Purple_Arcade_Machine"]/designationCategory |
            Defs/ThingDef[defName="Red_Arcade_Machine"]/designationCategory |
            Defs/ThingDef[defName="Blue_Arcade_Machine"]/designationCategory |
            Defs/ThingDef[defName="Colorful_Multi_Screen_TV"]/designationCategory |
			Defs/ThingDef[defName="Dancing_Star_Game_Pad"]/designationCategory |
			Defs/ThingDef[defName="Jellies_Plush_Claw_Machine"]/designationCategory |
            Defs/ThingDef[defName="Dancing_Star_Game_Machine"]/designationCategory
        </xpath>
        <value>
            <designationCategory>Joy</designationCategory>
        </value>
    </Operation>

    <!-- Remove the original BS category -->
   <Operation Class="PatchOperationConditional">
		<xpath>Defs/DesignationCategoryDef[defName="BA_Decoration"]</xpath>
		<match Class="PatchOperationRemove">
			<success>Always</success>
			<xpath>Defs/DesignationCategoryDef[defName="BA_Decoration"]</xpath>
		</match>
	</Operation>
	
</Patch>
