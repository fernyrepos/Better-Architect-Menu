<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationAddModExtension">
		<success>Always</success>
		<xpath>Defs/DesignationCategoryDef[defName="RRFurniture"]</xpath>
		<value>
			<li Class="BetterArchitect.NestedCategoryExtension">
				<parentCategory>Furniture</parentCategory>
			</li>
		</value>
	</Operation>

<!-- BEDROOM -->

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[@Name="RRBedBase"]</xpath>
		<value>
			<designationCategory>Ferny_Bedroom</designationCategory>
		</value>
	</Operation>
	
<!-- CHILDHOOD -->

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[@Name="RRBabyBedBase"]</xpath>
		<value>
			<designationCategory>Ferny_Childhood</designationCategory>
		</value>
	</Operation>
	
<!-- TABLES -->

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[@Name="RRTableBase"]</xpath>
		<value>
			<designationCategory>Ferny_Tables</designationCategory>
		</value>
	</Operation>
	
</Patch>
