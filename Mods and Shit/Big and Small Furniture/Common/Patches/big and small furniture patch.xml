<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Big and Small Furniture -->
	<!-- Package ID: redmattis.bsfurniture -->
	<!-- Author: 3024478368 -->

	<!-- Ferny: Replacing properties of the original category -->
					<Operation Class="PatchOperationReplace">
						<success>Always</success>
						<xpath>Defs/DesignationCategoryDef[defName="BS_Furniture"]/order</xpath>
						<value>
							<order>2</order>
						</value>
					</Operation>
					<Operation Class="PatchOperationReplace">
						<success>Always</success>
						<xpath>Defs/DesignationCategoryDef[defName="BS_Furniture"]/label</xpath>
						<value>
							<label>Scaled</label>
						</value>
					</Operation>
					<Operation Class="PatchOperationAdd">
						<success>Always</success>
						<xpath>Defs/DesignationCategoryDef[defName="BS_Furniture"]</xpath>
						<value>
							<modExtensions>
							<li Class="BetterArchitect.NestedCategoryExtension">
								<parentCategory>Furniture</parentCategory>
							</li>
							</modExtensions>
						</value>
					</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BS_BigHospitalBed"]</xpath>
		<value>
			<designationCategory>Ferny_Medical</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BS_GiantCrib"]</xpath>
		<value>
			<designationCategory>Ferny_Childhood</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BS_SmolHospitalBed"]</xpath>
		<value>
			<designationCategory>Ferny_Medical</designationCategory>
		</value>
	</Operation>

	<!-- Move animal beds to Animal Bedding -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BS_Giant_AnimalBed"]</xpath>
		<value>
			<designationCategory>Ferny_AnimalBedding</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BS_Giant_AnimalSleepingBox"]</xpath>
		<value>
			<designationCategory>Ferny_AnimalBedding</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BS_Giant_AnimalSleepingSpot"]</xpath>
		<value>
			<designationCategory>Ferny_AnimalBedding</designationCategory>
		</value>
	</Operation>

	<!-- Move doors to Doors -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BS_GiantAutoDoor"]</xpath>
		<value>
			<designationCategory>Ferny_Doors</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BS_GiantDoor"]</xpath>
		<value>
			<designationCategory>Ferny_Doors</designationCategory>
		</value>
	</Operation>

</Patch>
