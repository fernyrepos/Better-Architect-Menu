<?xml version="1.0" encoding="utf-8" ?>
<Patch>


<!-- WALLS -->
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="DA_OssuaryWall"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Walls</designationCategory>
                    </value>
                </Operation>

                <Operation Class="PatchOperationFindMod">
                    <mods>
                    <li>Progression: Aesthetics</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                    <operations>
                        <li Class="PatchOperationReplace">
                        <success>Always</success>
                        <xpath>Defs/ThingDef[defName="DA_OssuaryWall"]/designationCategory</xpath>
                        <value>
                            <designationCategory></designationCategory>
                        </value>
                        </li>
                    </operations>
                    </match>
                </Operation>


<!-- LIGHTING -->
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[@Name="DA_CandelabraBase"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Lighting</designationCategory>
                    </value>
                </Operation>
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[@Name="DA_SepulchralBrazierBase"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Lighting</designationCategory>
                    </value>
                </Operation>
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[@Name="SepulchralStatueBase"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Lighting</designationCategory>
                    </value>
                </Operation>
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[@Name="DA_CandleBase"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Lighting</designationCategory>
                    </value>
                </Operation>
                <Operation Class="PatchOperationRemove">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[@Name="DA_CandleBase"]/designatorDropdown</xpath>
                </Operation>

<!-- MEMORIAL -->
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="DA_Coffin"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Memorial</designationCategory>
                    </value>
                </Operation>
  
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="DA_GrandSarcophagus"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Memorial</designationCategory>
