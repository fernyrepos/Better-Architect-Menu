                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[@Name="DA_StatueBase"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Memorial</designationCategory>
                    </value>
                </Operation>
  
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="DA_BurialUrn"]/designationCategory</xpath>
