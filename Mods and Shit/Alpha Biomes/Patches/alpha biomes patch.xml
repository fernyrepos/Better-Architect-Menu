<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- WALLS -->
  <Operation Class="PatchOperationReplace">
    <success>Always</success>
    <xpath>Defs/ThingDef[defName="AB_ExoticWall"]/designationCategory</xpath>
    <value>
      <designationCategory>Ferny_Walls</designationCategory>
    </value>
  </Operation>

  <!-- DOORS -->
  <Operation Class="PatchOperationReplace">
    <success>Always</success>
    <xpath>
      Defs/ThingDef[defName="AB_ExoticDoor"]/designationCategory |
      Defs/ThingDef[defName="AB_ExoticAutoDoor"]/designationCategory
    </xpath>
    <value>
      <designationCategory>Ferny_Doors</designationCategory>
    </value>
  </Operation>

  <!-- SUPPORTS -->
  <Operation Class="PatchOperationReplace">
    <success>Always</success>
    <xpath>Defs/ThingDef[defName="AB_ExoticColumn"]/designationCategory</xpath>
    <value>
      <designationCategory>Ferny_Supports</designationCategory>
    </value>
  </Operation>

</Patch>
