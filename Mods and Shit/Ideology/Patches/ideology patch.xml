                </Operation>

<!-- DECORATIONS -->
                <Operation Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="PlantPot_Bonsai"]</xpath>
                    <value>
                        <designationCategory>Ferny_Decorations</designationCategory>
                    </value>
                </Operation>

<!-- PEOPLE -->
	            <!-- Moved these as they are more about managing people (e.g., pawn style and slave suppression) and not ideology/culture -->
