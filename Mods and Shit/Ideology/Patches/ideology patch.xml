                        <designationCategory>Ferny_Enhancement</designationCategory>
                    </value>
                </Operation>
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="NeuralSupercharger"]/designationCategory</xpath>
