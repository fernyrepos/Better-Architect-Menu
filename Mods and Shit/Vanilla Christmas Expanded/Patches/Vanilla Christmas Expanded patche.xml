<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="VCE_Turret_Snowthrower" or defName="VCE_Turret_Snowcannon"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_Weapons</designationCategory>
		</value>
	</Operation>

  	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="VCE_SnowSpewer"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_Terraforming</designationCategory>
		</value>
	</Operation>

  	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="VCE_GrandFestiveTree"]</xpath>
		<value>
			<designationCategory>Ferny_Decorations</designationCategory>
		</value>
	</Operation>

  	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="VCE_StandingFestiveTree"]</xpath>
		<value>
			<designationCategory>Ferny_Decorations</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="VCE_BuildingFloorCoveringBase"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_DecoRugs</designationCategory>
		</value>
	</Operation>
  
</Patch>
