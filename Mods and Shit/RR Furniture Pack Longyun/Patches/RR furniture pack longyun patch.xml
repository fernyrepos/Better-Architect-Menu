<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- ========== BEDROOM - All beds use same parent ========== -->
  <Operation Class="PatchOperationAdd">
        <success>Always</success>
    <xpath>Defs/ThingDef[@ParentName="RRBasicBedBase"]</xpath>
    <value>
      <designationCategory>Ferny_Bedroom</designationCategory>
    </value>
  </Operation>

  <!-- ========== BEDROOM - Wardrobes/Dressers/Endtable ========== -->
  <Operation Class="PatchOperationAdd">
        <success>Always</success>
    <xpath>Defs/ThingDef[
      defName="RRLijiangEndtable" or
      defName="RRLincangDresser" or
      defName="RRDalianWardrobe"
    ]</xpath>
    <value>
      <designationCategory>Ferny_Bedroom</designationCategory>
    </value>
  </Operation>

  <!-- ========== LIGHTING ========== -->
  <Operation Class="PatchOperationAdd">
        <success>Always</success>
    <xpath>Defs/ThingDef[
      defName="RRDandongLamp" or
      defName="RRJinzhouLamp"
    ]</xpath>
    <value>
      <designationCategory>Ferny_Lighting</designationCategory>
    </value>
  </Operation>

  <!-- ========== SEATING ========== -->
  <Operation Class="PatchOperationAdd">
        <success>Always</success>
    <xpath>Defs/ThingDef[
      defName="RRHefeiChair" or
      defName="RRShanghaiSofa" or
      defName="RRShanghaiSofaLong" or
      defName="RRNanjingSofa"
    ]</xpath>
    <value>
      <designationCategory>Ferny_Seating</designationCategory>
    </value>
  </Operation>

  <!-- ========== TABLES - Dining tables with gather spots ========== -->
  <Operation Class="PatchOperationAdd">
        <success>Always</success>
    <xpath>Defs/ThingDef[@ParentName="RRTableGatherSpotBase"]</xpath>
    <value>
      <designationCategory>Ferny_Tables</designationCategory>
    </value>
  </Operation>

  <!-- ========== TABLES - Desks and TV Stands ========== -->
  <Operation Class="PatchOperationAdd">
        <success>Always</success>
    <xpath>Defs/ThingDef[
      defName="RRSuzhouDesk" or
      defName="RRAnqingDesk" or
      defName="RRHangzhouStand" or
      defName="RRNingboStand" or
      defName="RRXihuStand"
    ]</xpath>
    <value>
      <designationCategory>Ferny_Tables</designationCategory>
    </value>
  </Operation>

  <!-- ========== HOSTING ========== -->
  <Operation Class="PatchOperationAdd">
        <success>Always</success>
    <xpath>Defs/ThingDef[defName="RRGoTable"]</xpath>
    <value>
      <designationCategory>Joy</designationCategory>
    </value>
  </Operation>

  <!-- ========== DECORATIONS ========== -->
  <Operation Class="PatchOperationAdd">
        <success>Always</success>
    <xpath>Defs/ThingDef[
      defName="RRQujingScreen" or
      defName="RRBaoshanScreen" or
      defName="RRJinanCupboard" or
      defName="RRLixiaCupboard"
    ]</xpath>
    <value>
      <designationCategory>Ferny_DecoFurniture</designationCategory>
    </value>
  </Operation>

</Patch>