<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- ========== BEDROOM - End tables ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[
            defName="RRFelzenEndtable" or
            defName="RRKarvinaEndtable"
        ]</xpath>
        <value>
            <designationCategory>Ferny_Bedroom</designationCategory>
        </value>
    </Operation>

    <!-- ========== BEDROOM - Wardrobes/Dressers ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[
            defName="RRHeronaWardrobe" or
            defName="RRTaragonaWardrobe" or
            defName="RRDresser" or
            defName="RRDresserTwo"
        ]</xpath>
        <value>
            <designationCategory>Ferny_Bedroom</designationCategory>
        </value>
    </Operation>

    <!-- ========== BEDROOM - All beds ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[@ParentName="RRBasicBedBase"]</xpath>
        <value>
            <designationCategory>Ferny_Bedroom</designationCategory>
        </value>
    </Operation>

    <!-- ========== BEDROOM - Crib ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[@ParentName="RRBabyBedBase"]</xpath>
        <value>
            <designationCategory>Ferny_Bedroom</designationCategory>
        </value>
    </Operation>

    <!-- ========== LIGHTING - Table lamps ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[
            defName="RRTableLamp" or
            defName="RRDeskLamp"
        ]</xpath>
        <value>
            <designationCategory>Ferny_Lighting</designationCategory>
        </value>
    </Operation>

    <!-- ========== LIGHTING - Standing lamps ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[@ParentName="RRLampBase"]</xpath>
        <value>
            <designationCategory>Ferny_Lighting</designationCategory>
        </value>
    </Operation>

    <!-- ========== SEATING - All use same pattern ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[
            defName="RRNanteOfficeChair" or
            defName="RRRuenOfficeChair" or
            defName="RRMarsileSofa" or
            defName="RRTulenSofa" or
            defName="RRAmienSofa" or
            defName="RRDiningChair" or
            defName="RRDiningChairTwo"
        ]</xpath>
        <value>
            <designationCategory>Ferny_Seating</designationCategory>
        </value>
    </Operation>

    <!-- ========== TABLES - Dining tables with gather spots ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[@ParentName="RRTableGatherSpotBase"]</xpath>
        <value>
            <designationCategory>Ferny_Tables</designationCategory>
        </value>
    </Operation>

    <!-- ========== TABLES - Desks and TV Stands ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[
            defName="RRDesk" or
            defName="RROfficeDesk" or
            defName="RRStreamlineDesk" or
            defName="RRTVStand" or
            defName="RRTVStandTwo" or
            defName="RRTVStandThree"
        ]</xpath>
        <value>
            <designationCategory>Ferny_Tables</designationCategory>
        </value>
    </Operation>

    <!-- ========== HOSTING (Entertainment) ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[
            defName="RRTVSet" or
            defName="RRHomeTVSet" or
            defName="RRHomeTV" or
            defName="RRBigTV" or
            defName="RRDesktop" or
            defName="RRDesktopTwo" or
            defName="RRDesktopThree" or
            defName="RRGojaRadio" or
            defName="RRBigStereoConsole" or
            defName="RRStereoConsole"
        ]</xpath>
        <value>
            <designationCategory>Joy</designationCategory>
        </value>
    </Operation>

    <!-- ========== CURTAINS ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[
            defName="RR2x1Curtains" or
            defName="RR2x1CurtainsOne"
        ]</xpath>
        <value>
            <designationCategory>Ferny_DecoCurtains</designationCategory>
        </value>
    </Operation>

    <!-- ========== DECORATIONS ========== -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/ThingDef[
            defName="RRCupboard" or
            defName="RRCupboardTwo" or
            defName="RRBookshelfOne" or
            defName="RRCupboardThree"
        ]</xpath>
        <value>
            <designationCategory>Ferny_DecoFurniture</designationCategory>
        </value>
    </Operation>

    <!-- ========== HYGIENE (Dub's Bad Hygiene items) ========== -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Dubs Bad Hygiene</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[
                        defName="RRVeneziaBasin" or
                        defName="RRPalermoBasin"
                    ]</xpath>
                    <value>
                        <designationCategory>Hygiene</designationCategory>
                    </value>
                </li>
            </operations>
        </match>
        <nomatch Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[
                        defName="RRVeneziaBasin" or
                        defName="RRPalermoBasin"
                    ]</xpath>
                    <value>
                        <designationCategory>Ferny_DecoOutside</designationCategory>
                    </value>
                </li>
            </operations>
        </nomatch>
    </Operation>

    <Operation Class="PatchOperationRemove">
		<xpath>Defs/DesignationCategoryDef[defName="RRFurniture"]</xpath>
	</Operation>
</Patch>