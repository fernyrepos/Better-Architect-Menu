<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/DesignationCategoryDef[defName="Ferny_ToxicWasteNetwork"]</xpath>
		
		<!-- Toxic waste network category -->
		<match Class="PatchOperationReplace">
			<success>Always</success>
			<xpath>Defs/ThingDef[@Name="CW_CargoContainer_Base"]/designationCategory</xpath>
			<value>
				<designationCategory>Ferny_ToxicWasteNetwork</designationCategory>
			</value>
		</match>

		<!-- Fallback category -->
		<nomatch Class="PatchOperationReplace">
			<success>Always</success>
			<xpath>Defs/ThingDef[@Name="CW_CargoContainer_Base"]/designationCategory</xpath>
			<value>
				<designationCategory>Ferny_ResourcesStorage</designationCategory>
			</value>
		</nomatch>
		
	</Operation>
	
</Patch>
