<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- Move under Resources. -->
	
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/DesignationCategoryDef[defName="VCHE_PipeNetworks"]</xpath>
		<match Class="PatchOperationAddModExtension">
			<success>Always</success>
			<xpath>Defs/DesignationCategoryDef[defName="Rimefeller"]</xpath>
			<value>
				
				<li Class="BetterArchitect.NestedCategoryExtension">
					<parentCategory>VCHE_PipeNetworks</parentCategory>
				</li>
				
			</value>
		</match>
	</Operation>
	
<!-- FLOORS -->

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/TerrainDef[@ParentName="RimefellerLinoBase"]</xpath>
		<value>
			<designationCategory>Floors</designationCategory>
		</value>
	</Operation>

<!-- PROCESSING PRODUCTION -->

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="Autoclave"]</xpath>
		<value>
			<designationCategory>Ferny_ProcessingProduction</designationCategory>
		</value>
	</Operation>
	
<!-- POWER GENERATION -->

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="FuelPowerplant"]</xpath>
		<value>
			<designationCategory>Ferny_PowerGeneration</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="LargeFuelPowerplant"]</xpath>
		<value>
			<designationCategory>Ferny_PowerGeneration</designationCategory>
		</value>
	</Operation>
	
<!-- EXPLOSIVES -->

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="Filth_NapalmTrail"]</xpath>
		<value>
			<designationCategory>Ferny_Explosives</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="NapalmBomb"]</xpath>
		<value>
			<designationCategory>Ferny_Explosives</designationCategory>
		</value>
	</Operation>
	
<!-- COMBAT INFRASTRUCTURE -->

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="SparkGrid"]</xpath>
		<value>
			<designationCategory>Ferny_CombatInfrastructure</designationCategory>
		</value>
	</Operation>
	
</Patch>
