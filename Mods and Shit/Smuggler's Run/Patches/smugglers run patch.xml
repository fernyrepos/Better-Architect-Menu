<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- KITCHEN -->
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>Defs/ThingDef[defName="Lambda_CactusRumStill"]/designationCategory</xpath>
        <value>
            <designationCategory>Ferny_Kitchen</designationCategory>
        </value>
    </Operation>

    <!-- FARMING -->
    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/TerrainDef[defName="Lambda_TilledSand"]</xpath>
        <value>
            <designationCategory>Ferny_Farming</designationCategory>
        </value>
    </Operation>

</Patch>